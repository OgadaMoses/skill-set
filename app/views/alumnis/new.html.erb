<% provide(:title, 'Sign Up') %>
<h1>Create Account as New Alumni</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @alumni) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :year %>
        <%= f.text_field :year, id: "year-field" %>
             <script>
            $(function() {
              $("#year-field").datepicker();
               });
          </script>

          <%= f.label :course %>
          <%= f.text_field :course %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit "Create My Account", class: "btn btn-primary" %>

          <% end %>
    </div>
</div>
